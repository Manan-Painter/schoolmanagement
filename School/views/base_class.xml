<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_base_class_tree" model="ir.ui.view">
        <field name="model">base.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="partner_id"/>
                <field name="sub_city"/>
            </tree>
        </field>
    </record>


    <record id="view_base_class_form" model="ir.ui.view">
        <field name="model">base.model</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="partner_id"/>
                            <field name="sub_city"/>
                            <field name="value1"/>
                            <field name="value2"/>
                            <field name="total"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_base_class">
        <field name="name">Base Class</field>
        <field name="res_model">base.model</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first semester form
            </p>
        </field>
    </record>

    <menuitem
            id="menu_base_class_root"
            name="Base Class"
            parent="menu_school_root"
            action="action_base_class"
            sequence="0"/>
</odoo>