<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_peon_student_search" model="ir.ui.view">
        <field name="model">peon.student</field>
        <field name="arch" type="xml">
            <search>
                <field name="first_name" />
                <field name="last_name"/>
                <field name="qualification" />
                <field name="gender"/>
                <field name="peon_ids"/>
            </search>
        </field>
    </record>

    <record id="view_peon_student_tree" model="ir.ui.view">
        <field name="model">peon.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="dob"/>
                <field name="qualification"/>
                <field name="gender"/>
                <field name="address"/>
                <field name="city"/>
                <field name="contact"/>
            </tree>
        </field>
    </record>


    <record id="view_peon_student_form" model="ir.ui.view">
        <field name="model">peon.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="dob"/>
                            <field name="qualification"/>
                            <field name="teacher_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="address"/>
                            <field name="city"/>
                            <field name="contact"/>
                            <field name="name"/>
                            <field name="peon_ids"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_peon_list">
        <field name="name">Peon</field>
        <field name="res_model">peon.student</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first addmission form
            </p>
        </field>
    </record>

</odoo>