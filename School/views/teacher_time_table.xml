<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hotel_customer_search" model="ir.ui.view">
        <field name="model">teacher_time_table</field>
        <field name="arch" type="xml">
            <search>
                <field name="subject"/>
                <field name="standard"/>
            </search>
        </field>
    </record>

    <record id="view_hotel_customer_tree" model="ir.ui.view">
        <field name="model">teacher_time_table</field>
        <field name="arch" type="xml">
            <tree>
                <field name="teacher_name"/>
                <field name="subject"/>
                <field name="standard"/>
            </tree>
        </field>
    </record>


    <record id="view_hotel_customer_form" model="ir.ui.view">
        <field name="model">teacher_time_table</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="teacher_name"/>
                            <field name="lecture"/>
                            <field name="subject"/>
                        </group>
                        <group>
                            <field name="time"/>
                            <field name="standard"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_teacher_time_table_list">
        <field name="name">Teacher Time Table</field>
        <field name="res_model">teacher_time_table</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first addmission form
            </p>
        </field>
    </record>

</odoo>