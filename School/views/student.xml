<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="admission_student_kanban">
        <field name="name">admission.student.Kanban</field>
        <field name="model">admission.student</field>
        <field name="arch" type="xml">
            <kanban class="o_modules_kanban">
                <field name="name"/>
                <field name="last_name"/>
                <field name="gender"/>
                <field name="city"/>
             <templates>
                    <t t-name="kanban-box">
                        <div class="oe_module_vignette">
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="o_kanban_record_title oe_kanban_details">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="last_name"/>
                                    <field name="gender"/>
                                </div>
                                <div>
                                    <field name="city"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_admission_student_search" model="ir.ui.view">
        <field name="model">admission.student</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="last_name"/>
                <field name="gender"/>
                <field name="city"/>
            </search>
        </field>
    </record>

    <record id="view_admission_student_tree" model="ir.ui.view">
        <field name="model">admission.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="last_name"/>
                <field name="father_name"/>
                <field name="mother_name"/>
                <field name="age"/>
                <field name="city"/>
                <field name="last_standard"/>
                <field name="current_standard"/>
                <field name="date_of_birth"/>
                <field name="address"/>
                <field name="gender"/>
                <field name="contact"/>

            </tree>
        </field>
    </record>

    <record id="view_admission_student_form" model="ir.ui.view">
        <field name="model">admission.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="last_name"/>
                            <field name="father_name"/>
                        </group>
                        <group>
                            <field name="mother_name"/>
                            <field name="age"/>
                            <field name="city"/>
                        </group>
                    </group>
                         <notebook>
                        <page string="Student IDS">
                                    <field name="student_ids"/>
                        </page>
                             <page string="Personal Information">
                            <group>
                                <group>
                                    <field name="last_standard"/>
                                    <field name="current_standard"/>
                                    <field name="date_of_birth"/>
                                </group>
                                <group>
                                    <field name="address"/>
                                    <field name="gender"/>
                                    <field name="contact"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_school_admission">
        <field name="name">Admission Form</field>
        <field name="res_model">admission.student</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first addmission form
            </p>
        </field>
    </record>

</odoo>