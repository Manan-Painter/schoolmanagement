<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_guardian_student_search" model="ir.ui.view">
        <field name="model">guardian.student</field>
        <field name="arch" type="xml">
            <search>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="qualification"/>
                <field name="gender"/>
            </search>
        </field>
    </record>

    <record id="view_guardian_student_tree" model="ir.ui.view">
        <field name="model">guardian.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="dob"/>
                <field name="qualification"/>
                <field name="gender"/>
                <field name="address"/>
                <field name="city"/>
                <field name="contact"/>
            </tree>
        </field>
    </record>


    <record id="view_guardian_student_form" model="ir.ui.view">
        <field name="model">guardian.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="dob"/>
                            <field name="qualification"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="address"/>
                            <field name="city"/>
                            <field name="contact"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_guardian_list">
        <field name="name">Guardian</field>
        <field name="res_model">guardian.student</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first addmission form
            </p>
        </field>
    </record>

</odoo>