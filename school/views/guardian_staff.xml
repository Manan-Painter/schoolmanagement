<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="guardian_student_kanban">
        <field name="name">guardian.student.Kanban</field>
        <field name="model">guardian.student</field>
        <field name="arch" type="xml">
            <kanban class="o_modules_kanban">
                <field name="qualification"/>
                <field name="gender"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_module_vignette">
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="o_kanban_record_title oe_kanban_details">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="qualification"/>
                                </div>
                                <div>
                                    <field name="gender"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="view_guardian_student_search" model="ir.ui.view">
        <field name="model">guardian.student</field>
        <field name="arch" type="xml">
            <search>
                <field name="qualification"/>
                <field name="gender"/>
            </search>
        </field>
    </record>

    <record id="view_guardian_student_tree" model="ir.ui.view">
        <field name="model">guardian.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="dob"/>
                <field name="qualification"/>
                <field name="gender"/>
                <field name="address"/>
                <field name="city"/>
                <field name="contact"/>
            </tree>
        </field>
    </record>


    <record id="view_guardian_student_form" model="ir.ui.view">
        <field name="model">guardian.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="heading" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="dob"/>
                            <field name="qualification"/>
                        </group>
                        <group>
                            <field name="age"/>
                            <field name="work"/>

                            <!--                            <field name="guardian_ids"/>-->
                        </group>
                    </group>
                    <notebook>
                        <page string="Guardian IDS">
                            <field name="guardian_ids"/>
                        </page>
                        <page string="Personal Information">
                            <group>
                                <group>
                                    <field name="address"/>
                                    <field name="gender"/>
                                    <field name="qualification"/>
                                </group>
                                <group>
                                    <field name="city"/>
                                    <field name="contact"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_guardian_list">
        <field name="name">Guardian(Staff)</field>
        <field name="res_model">guardian.student</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first addmission form
            </p>
        </field>
    </record>

</odoo>