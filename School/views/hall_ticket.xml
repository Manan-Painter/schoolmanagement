<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hotel_customer_search" model="ir.ui.view">
        <field name="model">hall.ticket</field>
        <field name="arch" type="xml">
            <search>
                <field name="student_name"/>
                <field name="year"/>
                <field name="roll_no"/>
                <field name="standard"/>
                <field name="section"/>
            </search>
        </field>
    </record>

    <record id="view_hotel_customer_tree" model="ir.ui.view">
        <field name="model">hall.ticket</field>
        <field name="arch" type="xml">
            <tree>
                <field name="student_name"/>
                <field name="year"/>
                <field name="roll_no"/>
                <field name="standard"/>
                <field name="section"/>
                <field name="date"/>
            </tree>
        </field>
    </record>


    <record id="view_hotel_customer_form" model="ir.ui.view">
        <field name="model">hall.ticket</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="student_name"/>
                            <field name="year"/>
                            <field name="roll_no"/>
                        </group>
                        <group>
                            <field name="standard"/>
                            <field name="section"/>
                            <field name="date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_hall_ticket_list">
        <field name="name">Hall Ticket</field>
        <field name="res_model">hall.ticket</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first semester form
            </p>
        </field>
    </record>

</odoo>