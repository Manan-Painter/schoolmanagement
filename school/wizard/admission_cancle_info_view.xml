<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_admission_cancel_form" model="ir.ui.view">
        <field name="model">admission.cancel</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="wiz_admission_id" readonly="1" context="{'admission_id': wiz_admission_id }"/>
                            <field name="reason"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_admission_cancel">
        <field name="name">Admission Cancel</field>
        <field name="res_model">admission.cancel</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first semester form
            </p>
        </field>
    </record>

</odoo>